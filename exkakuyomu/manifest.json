{
    "manifest_version": 2,
    "name": "カクヨム非公式拡張",
    "short_name": "exkakuyomu",
    "version": "1.0.0",

    "default_locale": "ja",
    "description": "カクヨムの作品のepub形式電子書籍ファイルを作成したり、プレーンテキスト形式でのバックアップをします。",
    "icons": {
        "128": "icon.png"
    },

    "author": "Inarinokami",
    "homepage_url": "https://github.com/Inarinokami/exkakuyomu",

    "background": {
        "scripts": [
            "lib/jszip.js",
            "src/util.js",
            "src/kakuyomu.js",
            "src/epub.js",
            "src/background.js"
        ]
    },


    "page_action": {
        "default_icon": "icon.png",
        "default_title": "カクヨム非公式拡張",
        "default_popup": "src/popup.html"
    },

    "permissions": [
        "tabs",
        "background",
        "https://kakuyomu.jp/works/*"
    ]
}
